# Example backend configuration for S3 remote state
# Copy this file to backend.hcl and update with your values
# Initialize with: terraform init -backend-config=backend.hcl

bucket         = "your-terraform-state-bucket"
key            = "workload-account/terraform.tfstate"
region         = "ap-southeast-1"
dynamodb_table = "terraform-state-lock"
encrypt        = true

# Optional: Enable versioning and lifecycle on the S3 bucket
