# S3 Backend Configuration Example
# Copy this file to backend.hcl and update with your values
# Initialize with: terraform init -backend-config=backend.hcl

bucket         = "my-terraform-state-bucket"
key            = "management-account/terraform.tfstate"
region         = "us-east-1"
encrypt        = true
dynamodb_table = "terraform-state-lock"

# Optional: Enable versioning on S3 bucket
# versioning    = true

# Optional: Server-side encryption with KMS
# kms_key_id    = "arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012"
